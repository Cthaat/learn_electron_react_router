{
  "productName": "System Resource Monitor",
  "appId": "com.n-ziermann.prepare",
  "copyright": "Copyright © 2025 Your Company",
  "icon": "./public/icon.png",
  "directories": {
    "output": "dist"
  },
  "extraResources": [
    "dist_electron/preload.cjs",
    "public/**"
  ],
  "files": [
    "dist_electron",
    "dist_react"
  ],
  "mac": {
    "target": "dmg",
    "icon": "./public/icon.icns",
    "darkModeSupport": true,
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "dmg": {
    "icon": "./public/icon.png",
    "iconSize": 100,
    "window": {
      "width": 540,
      "height": 380
    },
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "linux": {
    "target": [
      "AppImage",
      "deb",
      "rpm",
      "snap",
      "tar.gz"
    ],
    "category": "Utility",
    "synopsis": "系统资源监控工具",
    "description": "基于Electron + React实现的系统资源监控应用，用于监控CPU、内存和存储使用情况",
    "icon": "./public/icon.png",
    "maintainer": "Your Name <your.email@example.com>",
    "vendor": "Your Company, Inc.",
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "deb": {
    "depends": [
      "libnotify4",
      "libxtst6",
      "libnss3"
    ],
    "afterInstall": "build/debian/postinst",
    "afterRemove": "build/debian/postrm"
  },
  "rpm": {
    "depends": [
      "libnotify",
      "libXtst"
    ],
    "fpm": [
      "--rpm-rpmbuild-define=_build_id_links none"
    ]
  },
  "snap": {
    "confinement": "strict",
    "grade": "stable",
    "summary": "系统资源监控工具",
    "assumes": [
      "snapd2.55"
    ],
    "plugs": [
      "default",
      "home",
      "desktop",
      "desktop-legacy",
      "wayland",
      "x11",
      "unity7",
      "browser-support",
      "network",
      "gsettings",
      "audio-playback",
      "pulseaudio",
      "opengl"
    ]
  },
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "msi",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "icon": "./public/icon.ico",
    "legalTrademarks": "Your Company, Inc.",
    "verifyUpdateCodeSignature": false,
    "artifactName": "${productName}-${version}-${arch}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "perMachine": false,
    "installerIcon": "./public/icon.ico",
    "uninstallerIcon": "./public/icon.ico",
    "installerHeaderIcon": "./public/icon.ico",
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "系统资源监控器",
    "license": "LICENSE.txt"
  }
}